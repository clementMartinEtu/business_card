name: Build LaTeX document
on: [push]
jobs:
  build_latex:
    runs-on: ubuntu-latest
    steps:
      - name: Compile LaTeX document
        uses: clementMartinEtu/business_card@v4
        with:
          root_file: card.tex
      - name: Upload PDF file
        uses: actions/upload-artifact@v4
        with:
          name: PDF
          path: card.pdf
      - name : Publish PDF to GitHub Release
        uses: softprops/action-gh-release@v4
        with:
          files: card.pdf